<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Investory" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Investory" parent="Base.Theme.Investory" />

    <!-- Bottom navigation -->
    <style name="BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemPaddingTop">16dp</item>
        <item name="itemPaddingBottom">4dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Labels -->
    <style name="Labels" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">56dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <!-- Tabs -->
    <style name="Tabs" parent="Widget.Material3.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/b_n_item</item>
        <item name="tabTextColor">@color/legend_text</item>
        <item name="tabIndicatorColor">@color/primary_blue</item>
    </style>
</resources>